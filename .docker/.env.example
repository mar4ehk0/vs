# Database and cache
DB_DATABASE=${COMPOSE_PROJECT_NAME}-db
DB_USERNAME=${COMPOSE_PROJECT_NAME}-user
DB_PASSWORD=${COMPOSE_PROJECT_NAME}-secret
REDIS_PASSWORD=${COMPOSE_PROJECT_NAME}-secret

