# System
APP_NAME="vs"
COMPOSE_PROJECT_NAME=vs-roadrunner

DOCKER_USER=docker_user
DOCKER_HOME=/home/${DOCKER_USER}
DOCKER_USER_UID=1110
DOCKER_USER_GID=1110

# Network bindings
APP_DOMAIN=localhost
FORWARD_HTTP_PORT=80
FORWARD_HTTPS_PORT=443
FORWARD_HEALTH_PORT=5082
FORWARD_REDIS_PORT=5002
